<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Web Demo BookStore</display-name>

    <!-- BookAddServlet -->
    <servlet>
        <servlet-name>BookAddServlet</servlet-name>
        <servlet-class>servlet.BookAddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookAddServlet</servlet-name>
        <url-pattern>/BookAddServlet</url-pattern>
    </servlet-mapping>

    <!-- BookEditServlet -->
    <servlet>
        <servlet-name>BookEditServlet</servlet-name>
        <servlet-class>servlet.BookEditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookEditServlet</servlet-name>
        <url-pattern>/BookEditServlet</url-pattern>
    </servlet-mapping>

    <!-- BookDeleteServlet -->
    <servlet>
        <servlet-name>BookDeleteServlet</servlet-name>
        <servlet-class>servlet.BookDeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookDeleteServlet</servlet-name>
        <url-pattern>/BookDeleteServlet</url-pattern>
    </servlet-mapping>

    <!-- 默认首页 -->
    <welcome-file-list>
        <welcome-file>addBook.jsp</welcome-file>
    </welcome-file-list>
</web-app>